{
  "name": "dbmd-pg",
  "version": "1.0.1",
  "description": "Command line tool to generate database metadata for a Postgres database.",
  "author": "Stephen C. Harris",
  "license": "MIT",
  "keywords": [
    "database",
    "metadata"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/scharris/dbmd-pg.git"
  },
  "bin": {
    "dbmd-gen-pg": "./lib/cli.js"
  },
  "scripts": {
    "build-example-db": "docker build -t drugs-pg example/db",
    "example-db": "docker run -d --name drugs-pg --rm -p 5432:5432 --shm-size=256MB -e POSTGRES_USER=drugs -e POSTGRES_PASSWORD=drugs -e POSTGRES_DB=drugs drugs-pg",
    "build": "npm run clean && tsc",
    "pregen-example-dbmd": "npm run build",
    "gen-example-dbmd": "node lib/cli.js --conn-env example/db/connection.env  example/dbmd.json",
    "clean": "rimraf lib"
  },
  "dependencies": {
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.1",
    "@types/pg": "^7.14.7",
    "dotenv": "^8.2.0",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "pg": "^8.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  }
}
